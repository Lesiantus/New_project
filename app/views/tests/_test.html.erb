<tr>
  <td><%= test.title %></td>
  <td><%= test_level(test) %></td>
  <td><%= link_to 'Просмотр |', test_path(test) %></td>
  <td><%= link_to 'Редактировать |', edit_test_path(test) %></td>
  <td>
      <%= link_to 'Удалить',
                  test_path(test),
                  method: :delete,
                  data: { confirm: 'Подтверждение удаления' } %>
  </td>
  <td><%= button_to 'Начать прохождение', start_test_path(test) %></td>
</tr>

<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'resource-errors', data: {resource_id: resource.id} do %>

    <div>
      <h2><%= t('.header', count: resource.errors.count) %>:</h2>

      <ul>
        <% resource.errors.each do |message| %>
          <li><%= message.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>


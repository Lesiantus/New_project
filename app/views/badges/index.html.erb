  <title>table-layout</title>
  <style>
   table {
    table-layout: fixed; /* Фиксированная ширина ячеек */
    width: 50%; /* Ширина таблицы */
   }
  </style>

<table>
  <tr>
    <th><%= t('.title') %></th>
    <th><%= t('.rule') %> </th>
    <th><%= t('.image') %></th>
  </tr>

  <% @badges.each do |badge| %>
    <tr>
      <td><%= badge.title %></td>
      <td><%= badge.rule %> </td>
      <td><%= image_tag("#{badge.image_name}", width:'100px') %></td>
    </tr>
  <% end %>
</table> 
   

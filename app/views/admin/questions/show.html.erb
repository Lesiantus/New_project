<p>
  <strong>Вопрос:</strong><br>
  <%= @question.body %>
</p>

<h2>Ответы</h2>

<%= link_to 'Добавить ответ', new_admin_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>
<p>
  <%= link_to 'Редактировать', edit_admin_question_path %>
  <%= link_to 'К списку вопросов теста', admin_test_path(@question.test) %>
  <%= link_to 'Удалить',
                  admin_question_path(@question),
                  method: :delete,
                  data: { confirm: 'Подтверждение удаления' } %>
</p>




<% if @result.successfull? %>

  <h2 style="color: green;"><%= "Тест #{@result.test.title} завершён , у вас #{@result.success_count}% правильных ответов" %></h2>

<% else %>

  <h2 style="color: red;"><%= "Тест #{@result.test.title} не пройден у вас #{@result.success_count}% правильных ответов" %></h2>

<% end %>


<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.select :image_name,
                  options_for_select(Badge.images),
                  class: "form-control" %>
  </p>
  <p>
    <%= form.label :rule %>
    <%= form.select :rule, options_for_select(rules, @badge.rule) %>
  </p>

  <p>
    <%= form.label :value %>
    <%= form.text_field :value, id: :badge_rule %>
  </p>
  <p><%= form.submit t('.submit')%></p>
<% end %>

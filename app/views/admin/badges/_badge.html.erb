<tr>
  <td><%= image_tag("#{badge.image_name}", width:'100px') %></td>
  <td><%= badge.title %></td>
  <td><%= badge.rule %></td>
  <td><%= badge.level %></td>
  <td><%= badge.category_id %></td>
  <td><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td>
    <%= link_to t('.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('.delete_confirmation') } %>
  </td>
</tr>
